{
  "summary": "Run next runnable step (DevGodzilla API)",
  "description": "Selects the next runnable step for a protocol and executes it (QA auto-run in DevGodzilla).",
  "value": {
    "modules": [
      {
        "id": "select_next_step",
        "value": {
          "type": "script",
          "path": "u/devgodzilla/protocol_select_next_step"
        },
        "input_transforms": {
          "protocol_run_id": {
            "type": "javascript",
            "expr": "flow_input.protocol_run_id"
          }
        }
      },
      {
        "id": "branch_has_step",
        "value": {
          "type": "branchone",
          "branches": [
            {
              "summary": "No runnable steps",
              "expr": "!results.select_next_step.step_run_id",
              "modules": []
            },
            {
              "summary": "Execute step",
              "expr": "!!results.select_next_step.step_run_id",
              "modules": [
                {
                  "id": "execute_step",
                  "value": {
                    "type": "script",
                    "path": "u/devgodzilla/step_execute_api"
                  },
                  "input_transforms": {
                    "step_run_id": {
                      "type": "javascript",
                      "expr": "results.select_next_step.step_run_id"
                    }
                  }
                }
              ]
            }
          ],
          "default": []
        }
      }
    ]
  },
  "schema": {
    "type": "object",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "properties": {
      "project_id": {
        "type": "integer",
        "description": "Optional project_id for association/metadata",
        "default": 0
      },
      "protocol_run_id": {
        "type": "integer",
        "description": "Protocol run ID"
      }
    },
    "required": ["protocol_run_id"]
  }
}
